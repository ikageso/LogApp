<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LogApp.Views.MainPage"
             Title="{Binding Title}">

    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
        <Button Text="Log" BackgroundColor="Blue" CornerRadius="10" Command="{Binding LogCommand}"/>
        <Button Text="Next Page" BackgroundColor="Blue" CornerRadius="10" Command="{Binding NextPageCommand}"/>
    </StackLayout>

</ContentPage>